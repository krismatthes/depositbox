# Neo4j Database Configuration
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-password

# JWT Configuration (Enhanced Security)
JWT_SECRET=your-very-secure-random-string-here-64-chars-minimum
JWT_REFRESH_SECRET=different-refresh-secret-for-enhanced-security
EMAIL_VERIFICATION_SECRET=separate-secret-for-email-tokens

# API Configuration (Next.js API routes)
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_BASE_URL=https://your-site.vercel.app

# Security Configuration
NODE_ENV=production